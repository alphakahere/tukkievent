{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"],
      "@auth/*": ["src/auth/*"],
      "@users/*": ["src/users/*"],
      "@organizations/*": ["src/organizations/*"],
      "@events/*": ["src/events/*"],
      "@tickets/*": ["src/tickets/*"],
      "@registrations/*": ["src/registrations/*"],
      "@payments/*": ["src/payments/*"],
      "@prisma/*": ["src/prisma/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
